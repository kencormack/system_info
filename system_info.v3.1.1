  local TVGROUP=""

  fnBANNER "DISPLAY POWER UP STATUS"
  echo "DISPLAY         ID  STATUS"
  echo "--------------------------"
  echo -e -n "Main LCD        0"
  case $(vcgencmd display_power -1 0 | cut -f2 -d"=") in
    "0") echo "   off"
      ;;
    "1") echo "   ON"
      ;;
    *) echo "   undetected"
      ;;
  esac
