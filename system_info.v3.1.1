        if ${SUDO} test -f "${HOMEDIR}/.ssh/known_hosts"
        then
          fnMOG 600 "${PW_USR}" "${GRP_GRP}" "${HOMEDIR}/.ssh/known_hosts"
        fi
        if ${SUDO} test -f "${HOMEDIR}/.ssh/config"
        then
